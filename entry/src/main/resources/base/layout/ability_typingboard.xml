<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#FFF8F8BB"
    ohos:orientation="vertical">

    <TextField
        ohos:id="$+id:remote_input"
        ohos:height="500vp"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_text_field"
        ohos:bottom_margin="25vp"
        ohos:left_margin="25vp"
        ohos:left_padding="10vp"
        ohos:multiple_lines="true"
        ohos:right_margin="25vp"
        ohos:right_padding="10vp"
        ohos:text_alignment="left"
        ohos:text_size="18vp"
        ohos:top_margin="25vp"/>

    <Button
        ohos:id="$+id:migrate"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_button"
        ohos:left_margin="45vp"
        ohos:right_margin="45vp"
        ohos:text="迁移页面"
        ohos:text_size="25vp"/>

    <Button
    ohos:id="$+id:reverse"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:background_element="$graphic:background_button"
    ohos:left_margin="45vp"
    ohos:right_margin="45vp"
    ohos:top_margin="10vp"
    ohos:text="回迁页面"
    ohos:text_size="25vp"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:top_margin="10vp">

        <Text
            ohos:height="30vp"
            ohos:width="match_content"
            ohos:left_margin="8vp"
            ohos:text="剪切板自动复制"
            ohos:text_size="25vp"/>

        <Switch
            ohos:id="$+id:pasteSwitch"
            ohos:height="25vp"
            ohos:width="60vp"
            ohos:left_margin="10vp"
            ohos:background_element="$graphic:background_button"
            />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:top_margin="10vp">

        <Text
            ohos:height="30vp"
            ohos:width="match_content"
            ohos:left_margin="8vp"
            ohos:text="文字自动复制"
            ohos:text_size="25vp"/>

        <Switch
            ohos:id="$+id:docSwitch"
            ohos:height="25vp"
            ohos:width="60vp"
            ohos:left_margin="10vp"
            ohos:background_element="$graphic:background_button"
            />
    </DirectionalLayout>

</DirectionalLayout>